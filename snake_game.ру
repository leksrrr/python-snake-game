import turtle
import time
import random

# –ù–∞—Å—Ç—Ä–æ–π–∫–∞ —ç–∫—Ä–∞–Ω–∞
wn = turtle.Screen()
wn.title("–ó–º–µ–π–∫–∞ –æ—Ç –±—É–¥—É—â–µ–≥–æ –Ω—å—é-–π–æ—Ä–∫—Å–∫–æ–≥–æ –ø—Ä–æ–≥—Ä–∞–º–º–∏—Å—Ç–∞! üóΩ")
wn.bgcolor("black")
wn.setup(width=600, height=600)
wn.tracer(0)  # –û—Ç–∫–ª—é—á–∞–µ–º –∞–≤—Ç–æ–æ–±–Ω–æ–≤–ª–µ–Ω–∏–µ –¥–ª—è –ø–ª–∞–≤–Ω–æ–π –∞–Ω–∏–º–∞—Ü–∏–∏

# –ì–æ–ª–æ–≤–∞ –∑–º–µ–π–∫–∏
head = turtle.Turtle()
head.speed(0)
head.shape("square")
head.color("green")
head.penup()
head.goto(0, 0)
head.direction = "stop"

# –ï–¥–∞ (–µ–¥–∞ –¥–ª—è –∑–º–µ–π–∫–∏)
food = turtle.Turtle()
food.speed(0)
food.shape("circle")
food.color("red")
food.penup()
food.goto(0, 100)

# –°—á—ë—Ç –æ—á–∫–æ–≤
score = 0
high_score = 0

# –û—Ç–æ–±—Ä–∞–∂–µ–Ω–∏–µ —Å—á—ë—Ç–∞
score_display = turtle.Turtle()
score_display.speed(0)
score_display.color("white")
score_display.penup()
score_display.hideturtle()
score_display.goto(0, 260)
score_display.write("–û—á–∫–∏: 0  –†–µ–∫–æ—Ä–¥: 0", align="center", font=("Arial", 20, "normal"))

# –§—É–Ω–∫—Ü–∏–∏ –¥–≤–∏–∂–µ–Ω–∏—è
def go_up():
    if head.direction != "down":
        head.direction = "up"

def go_down():
    if head.direction != "up":
        head.direction = "down"

def go_left():
    if head.direction != "right":
        head.direction = "left"

def go_right():
    if head.direction != "left":
        head.direction = "right"

def move():
    if head.direction == "up":
        y = head.ycor()
        head.sety(y + 20)
    if head.direction == "down":
        y = head.ycor()
        head.sety(y - 20)
    if head.direction == "left":
        x = head.xcor()
        head.setx(x - 20)
    if head.direction == "right":
        x = head.xcor()
        head.setx(x + 20)

# –ü—Ä–∏–≤—è–∑–∫–∞ –∫–ª–∞–≤–∏—à
wn.listen()
wn.onkeypress(go_up, "Up")
wn.onkeypress(go_down, "Down")
wn.onkeypress(go_left, "Left")
wn.onkeypress(go_right, "Right")

# –°–µ–≥–º–µ–Ω—Ç—ã –∑–º–µ–π–∫–∏
segments = []

# –ì–ª–∞–≤–Ω—ã–π –∏–≥—Ä–æ–≤–æ–π —Ü–∏–∫–ª
while True:
    wn.update()
    
    # –ü—Ä–æ–≤–µ—Ä–∫–∞ —Å—Ç–æ–ª–∫–Ω–æ–≤–µ–Ω–∏—è —Å –≥—Ä–∞–Ω–∏—Ü–∞–º–∏
    if (head.xcor() > 290 or head.xcor() < -290 or 
        head.ycor() > 290 or head.ycor() < -290):
        time.sleep(1)
        head.goto(0, 0)
        head.direction = "stop"
        
        # –°–∫—Ä—ã–≤–∞–µ–º —Å–µ–≥–º–µ–Ω—Ç—ã
        for segment in segments:
            segment.goto(1000, 1000)
        segments.clear()
        
        # –°–±—Ä–æ—Å —Å—á—ë—Ç–∞
        score = 0
        score_display.clear()
        score_display.write("–û—á–∫–∏: {}  –†–µ–∫–æ—Ä–¥: {}".format(score, high_score), 
                          align="center", font=("Arial", 20, "normal"))
    
    # –ü—Ä–æ–≤–µ—Ä–∫–∞ —Å—ä–µ–¥–∞–Ω–∏—è –µ–¥—ã
    if head.distance(food) < 20:
        # –ü–µ—Ä–µ–º–µ—â–∞–µ–º –µ–¥—É –≤ —Å–ª—É—á–∞–π–Ω–æ–µ –º–µ—Å—Ç–æ
        x = random.randint(-290, 290)
        y = random.randint(-290, 290)
        food.goto(x, y)
        
        # –î–æ–±–∞–≤–ª—è–µ–º –Ω–æ–≤—ã–π —Å–µ–≥–º–µ–Ω—Ç
        new_segment = turtle.Turtle()
        new_segment.speed(0)
        new_segment.shape("square")
        new_segment.color("light green")
        new_segment.penup()
        segments.append(new_segment)
        
        # –£–≤–µ–ª–∏—á–∏–≤–∞–µ–º —Å—á—ë—Ç
        score += 10
        if score > high_score:
            high_score = score
            
        score_display.clear()
        score_display.write("–û—á–∫–∏: {}  –†–µ–∫–æ—Ä–¥: {}".format(score, high_score), 
                          align="center", font=("Arial", 20, "normal"))
    
    # –î–≤–∏–≥–∞–µ–º —Å–µ–≥–º–µ–Ω—Ç—ã –≤ –æ–±—Ä–∞—Ç–Ω–æ–º –ø–æ—Ä—è–¥–∫–µ
    for i in range(len(segments)-1, 0, -1):
        x = segments[i-1].xcor()
        y = segments[i-1].ycor()
        segments[i].goto(x, y)
    
    # –î–≤–∏–≥–∞–µ–º –ø–µ—Ä–≤—ã–π —Å–µ–≥–º–µ–Ω—Ç –∫ –≥–æ–ª–æ–≤–µ
    if len(segments) > 0:
        x = head.xcor()
        y = head.ycor()
        segments[0].goto(x, y)
    
    move()
    
    # –ü—Ä–æ–≤–µ—Ä–∫–∞ —Å—Ç–æ–ª–∫–Ω–æ–≤–µ–Ω–∏—è —Å —Ç–µ–ª–æ–º
    for segment in segments:
        if segment.distance(head) < 20:
            time.sleep(1)
            head.goto(0, 0)
            head.direction = "stop"
            for segment in segments:
                segment.goto(1000, 1000)
            segments.clear()
            score = 0
            score_display.clear()
            score_display.write("–û—á–∫–∏: {}  –†–µ–∫–æ—Ä–¥: {}".format(score, high_score), 
                              align="center", font=("Arial", 20, "normal"))
    
    time.sleep(0.1)

wn.mainloop()